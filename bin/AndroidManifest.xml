<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.blucon"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.musicshare.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.musicshare.SenderActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.musicshare.RecieverActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.musicshare.RelayActivity"
            android:label="@string/title_activity_relay" >
        </activity>
        <activity
            android:name="com.example.musicshare.BrowseFolder"
            android:label="@string/title_activity_browse_folder" >
        </activity>
    </application>

</manifest>
